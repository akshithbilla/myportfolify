            // Sort users by last login (newest first)
            const sortedUsers = [...users].sort((a, b) => {
                const dateA = a.lastLogin ? new Date(a.lastLogin) : new Date(0);
                const dateB = b.lastLogin ? new Date(b.lastLogin) : new Date(0);
                return dateB - dateA;
